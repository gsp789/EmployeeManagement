
@{
    ViewData["Title"] = "Add Expenses";
    Layout = "~/Views/shared/_Layout.cshtml";
}
<div>
    <div class="col-sm-2">
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a href="#section1">PreTravel Claim</a></li>
            <li><a href="#section2">Expense Submission</a></li>
            <li><a href="#section3">Apply for leave</a></li>
        </ul>
    </div>
    <div class="col-sm-10">
        <h2 class="aligncenter">All Expenses for the business travel</h2>
        <br />
        <form class="form-horizontal col-sm-offset-2">
            <div class="form-group">
                <label class="control-label col-sm-2" for="approvedform">Approved Pretravel Claims</label>
                <div class="col-sm-6">
                    <select id="approvedform" class="form-control">
                        <option value="default">select an approved pretravel claim</option>
                        <option value="id1">Hyderabad 01-Jan-2017 to 02-Jan-2017</option>
                        <option value="id2">Chennai 21-APR-2017 to 22-APR-2017</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="managername">Manager Name</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="managername" placeholder="Prepopulate Manager Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="businesspurpose">Purpose of the trip:</label>
                <div class="col-sm-6">
                    <textarea class="form-control" rows="5" id="businesspurpose" placeholder="Prepopulate business purpose"></textarea>
                </div>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Add an expense
            </button>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add an expense</h5>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="category">Select a category</label>
                                <div class="col-sm-6">
                                    <select id="category">
                                        <option value="default" class="form-control">select a category</option>
                                        <option value="id1">hotel</option>
                                        <option value="id2">car</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="subcategory">Select a sub category</label>
                                <div class="col-sm-6">
                                    <select id="subcategory" class="form-control">
                                        <option value="default">select a category</option>
                                        <option value="id1">hotel</option>
                                        <option value="id2">car</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="cost">Cost Incurred</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="cost" placeholder="Amount">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="currency">Currency</label>
                                <div class="col-sm-6">
                                    <select id="currency" class="form-control">
                                        <option value="default">select the currency</option>
                                        <option value="id1">Singapore dollar</option>
                                        <option value="id2">US dollar</option>
                                        <option value="id3">Indian rupee</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="days">Number of days</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="days" placeholder="number">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="days">Number of days</label>
                                <div class="col-sm-6">
                                    <input type="file" class="form-control" id="days" placeholder="choose file">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add expense</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

